<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView_restaurant_activity_restaurant_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/restaurant_activity_restaurant_icon_description"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="4dp"/>

        <ImageView
            android:id="@+id/imageView_restaurant_activity_warning_level"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/restaurant_activity_hazard_level_icon_description"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:id="@+id/textView_restaurant_activity_restaurant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/restaurant_activity_restaurant_name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/imageView_restaurant_activity_restaurant_icon"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/textView_restaurant_activity_issue_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/restaurant_activity_issue_found"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/imageView_restaurant_activity_restaurant_icon"
            app:layout_constraintTop_toBottomOf="@+id/textView_restaurant_activity_restaurant_name"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/textView_restaurant_activity_issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/restaurant_activity_issue_number"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView_restaurant_activity_issue_title"
            app:layout_constraintStart_toEndOf="@+id/textView_restaurant_activity_issue_title"
            app:layout_constraintTop_toTopOf="@+id/textView_restaurant_activity_issue_title" />

        <TextView
            android:id="@+id/textView_restaurant_activity_date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/restaurant_activity_last_inspection"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_restaurant_activity_restaurant_icon"
            app:layout_constraintTop_toBottomOf="@+id/textView_restaurant_activity_issue_title"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/textView_restaurant_activity_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/restaurant_activity_how_long_ago"
            app:layout_constraintBottom_toBottomOf="@+id/textView_restaurant_activity_date_title"
            app:layout_constraintStart_toEndOf="@+id/textView_restaurant_activity_date_title"
            app:layout_constraintTop_toTopOf="@+id/textView_restaurant_activity_date_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>