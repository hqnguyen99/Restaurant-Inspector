<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/gradient_background_1">

    <TextView
        android:id="@+id/textView_violation_activity_full_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextDark"/>

    <TextView
        android:id="@+id/textView_violation_activity_inspection_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_violation_activity_full_date"
        android:textSize="30sp"
        android:textColor="@color/colorTextDark"/>

    <TextView
        android:id="@+id/textView_violation_activity_critical_issues_found_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_violation_activity_inspection_type"
        android:text="@string/critical_issues_found"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/textView_violation_activity_critical_issues_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_violation_activity_inspection_type"
        android:layout_toEndOf="@+id/textView_violation_activity_critical_issues_found_title"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/textView_violation_activity_noncritical_issues_found_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_violation_activity_critical_issues_found_title"
        android:text="@string/non_critical_issues_found"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/textView_violation_activity_noncritical_issues_found"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_violation_activity_critical_issues_found_title"
        android:layout_toEndOf="@+id/textView_violation_activity_noncritical_issues_found_title"
        android:textSize="25sp"/>

    <ImageView
        android:contentDescription="@string/violation_hazard_level_icon"
        android:id="@+id/imageView_violation_activity_hazard_level_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:layout_below="@+id/textView_violation_activity_noncritical_issues_found_title" />

    <TextView
        android:id="@+id/textView_violation_activity_hazard_level_words_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_violation_activity_noncritical_issues_found_title"
        android:layout_toEndOf="@+id/imageView_violation_activity_hazard_level_icon"
        android:text="@string/hazard_level"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/textView_violation_activity_hazard_level_words"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_violation_activity_noncritical_issues_found_title"
        android:layout_toEndOf="@+id/textView_violation_activity_hazard_level_words_title"
        android:textSize="25sp"
        android:layout_marginTop="15dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/violation_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="4dp"
        android:scrollbars="vertical"
        android:layout_below="@+id/imageView_violation_activity_hazard_level_icon"/>
</RelativeLayout>

