<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView_violation_activity_violation_nature_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/violation_activity_nature_icon_description"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="4dp"/>

        <ImageView
            android:id="@+id/imageView_violation_activity_violation_severity_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/violation_activity_severity_icon_description"
            android:padding="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="4dp"/>

        <TextView
            android:id="@+id/textView_violation_activity_brief_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/violation_activity_brief_description_sample"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView_violation_activity_violation_nature_icon"
            app:layout_constraintTop_toTopOf="@+id/imageView_violation_activity_violation_nature_icon"
            android:layout_marginStart="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>